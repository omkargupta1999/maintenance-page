apiVersion: networking.istio.io/v1beta1
kind: VirtualService
metadata:
  name: maintenance-override
  namespace: dev-istio-system
spec:
  hosts:
    - dev.epay.sbi
  gateways:
    - dev-istio-system/epay-dev-gateway
  http:
    - name: "global-maintenance-redirect"
      match:
        - uri:
            regex: ".*"     # Match everything including /, /demo/, /ui/
      redirect:
        scheme: https
        authority: dev.epay.sbi
        uri: /maintenance
        redirectCode: 302
